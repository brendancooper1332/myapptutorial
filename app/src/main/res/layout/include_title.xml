<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlyt_top"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorprimary">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_right"
        android:layout_marginTop="@dimen/close_btn_margin_top"
        android:paddingBottom="@dimen/close_btn_margin_top"
        android:paddingRight="40dp"
        android:paddingTop="@dimen/close_btn_margin_top"
        android:src="@mipmap/close"
        tools:ignore="ContentDescription,RtlHardcoded,RtlSymmetry"
        android:contentDescription="" />


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/title"
        android:textColor="@color/white"
        android:textSize="@dimen/title_text_size" />


    <TextView
        android:id="@+id/tv_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_right"
        android:paddingLeft="50dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="@string/add_str"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_text_size"
        tools:ignore="RelativeOverlap,RtlHardcoded,RtlSymmetry" />

</RelativeLayout>
